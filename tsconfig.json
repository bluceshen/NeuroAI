{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "lib": ["es6", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "rootDir": "src",
    "sourceMap": true,
    "strict": true,
    "target": "ES2020",
    "skipLibCheck": true,
    "typeRoots": [
      "node_modules/@types",
      "src/common/types.ts"
    ]
  },
  "exclude": ["node_modules", ".vscode-test", "out", "scripts", "assets"]
}
